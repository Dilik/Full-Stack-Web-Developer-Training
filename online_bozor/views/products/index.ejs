<% layout('layouts/boilerplate.ejs') %>


    <div class="container-fluid">
        <h1>
            <%=category.toUpperCase() %>
        </h1>

        <div class="row">
            <% for (let product of products){ %>
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <figure class="figure">
                        <a href="/products/<%=product._id%>">
                            <img class="figure-img img-thumbnail rounded" src="<%=product.images[0].imageResize%>" alt="">
                        </a>
                        <figurecaption class="figure-caption"><b> $
                                <%=product.price%>
                            </b>-
                            <%=product.name.substr(0,20)%>...
                        </figurecaption>
                    </figure>
                </div>
                <% } %>
        </div>
    </div>