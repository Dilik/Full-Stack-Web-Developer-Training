<% layout('layouts/boilerplate.ejs') %>


    <div class="container">
        <h4 class="text-center">
            <%=category.toUpperCase() %>
        </h4>
        <div class="row">
            <% for (let product of products.reverse()){ %>
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <a href="/products/<%=product._id%>">
                        <img class="figure-img img-thumbnail rounded" src="<%=product.images[0].imageResize%>" alt="">
                        <p class="catLink"><b>$ <%=product.price%> </b>- <%=product.name.substr(0,20)%></p>
                    </a>
                </div>
                <% } %>
        </div>
    </div>