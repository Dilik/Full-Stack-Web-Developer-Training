<% layout('layouts/boilerplate.ejs') %>
    <div class="row">
        <h1 class="text-center">Edit Product</h1>
        <div class="col-6 offset-3">
            <form action="/products/<%=product._id%>?_method=PUT" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="name">Title</label>
                    <input class="form-control" value="<%= product.name %>" type="text" id="name" name="product[name]" placeholder="Enter product name" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" value="<%= product.location %>" type="text" id="location" name="product[location]" placeholder="Enter location" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" value="<%= product.image%>" type="text" id="image" name="product[image]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Product price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="price" value="<%= product.price %>" id="price" name="product[price]" class="form-control" placeholder="0" aria-label="price" aria-describedby="price-label" required>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" name="product[description]" id="description" required><%= product.description%> </textarea>
                </div>

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <label class="input-group-text" for="condition">Condition</label>
                    </div>
                    <select class="custom-select" id="condition" name="product[condition]" required>
                            <% for(let condition of conditions){ %>
                                <option value="<%= condition %>" <%=product.condition === condition ? 'selected' : '' %>><%= condition %></option>
                            <% } %>  
                        </select>
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <label class="input-group-text" for="category">Category</label>
                    </div>
                    <select class="custom-select" id="category" name="product[category]" required>
                        <% for(let category of categories){ %>
                            <option value="<%= category %>" <%= product.category === category ? 'selected' : '' %>><%= category %></option>
                          <% } %>  
                    </select>
                </div>
                <div class="mb-3">
                    <label for="tags" class="form-label">Tags</label>
                    <input type="text" id="tags" name="product[tags]" class="form-control">
                </div>
                <div class="mb-3">
                    <button class="btn btn-info btn-block">Save</button>
                </div>
            </form>
        </div>
    </div>