<% layout('layouts/boilerplate.ejs') %>
    <div class="row">
        <h1 class="text-center">Post a New Product</h1>
        <div class="col-6 offset-3">
            <form action="/products" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="name">Title</label>
                    <input class="form-control" type="text" id="name" name="product[name]" placeholder="Enter product name" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="product[location]" placeholder="Enter location" required>
                </div>
                <input type="file" name="image" id="image" multiple>
                <!-- <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="product[image]" required>
                </div> -->
                <div class="mb-3">
                    <label class="form-label" for="price">Product price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="price" id="price" name="product[price]" class="form-control" placeholder="0" aria-label="price" aria-describedby="price-label" required>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" name="product[description]" id="description" required></textarea>
                </div>

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <label class="input-group-text" for="condition">Condition</label>
                    </div>
                    <select class="custom-select" id="condition" name="product[condition]" required>
                        <% for(let condition of conditions){ %>
                            <option value="<%= condition %>"><%= condition %></option>
                        <% } %>  
                    </select>
                </div>

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <label class="input-group-text" for="category">Category</label>
                    </div>
                    <select class="custom-select" id="category" name="product[category]" required>
                        <% for(let category of categories){ %>
                            <option value="<%=category %>"><%= category %></option>
                        <% } %>  
                    </select>
                </div>
                <div class="mb-3">
                    <label for="tags" class="form-label">Tags</label>
                    <input type="text" id="tags" name="product[tags]" class="form-control">
                </div>
                <div class="mb-3">
                    <button class="btn btn-success btn-block">Submit</button>
                </div>
            </form>
        </div>
    </div>