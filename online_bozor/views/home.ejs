<body>
    <nav class="navbar navbar-dark fixed-top nav-bg">
        <h3 class="brand"><i class="fas fa-store"></i> E-Bazar</h3>
    <%- include("./partials/flash")%>

        <ul class="nav nav-masthead justify-content-center float-md-right">
            <% if(!currentUser){ %>
                <a class="nav-link" href="/login">Login</a>
                <a class="nav-link" href="/register">Register</a>
                <% } else {%>
                    <a class="nav-link" href="/logout">Logout</a>
                    <% } %>
        </ul>
    </nav>
    </header>

    <main role="main">
        <div id="myCarousel" class="cover-container carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="first-slide"
                        src="/images/E-Com-1.jpg"
                        alt="First slide">
                    <div class="container">
                        <div class="carousel-caption text-left">
                            <h1>E-Bazar</h1>
                            <p>is an online marketplace, where people come together to make,<br> sell, buy, and collect unique items.</p>
                            <p><a class="btn btn-lg btn-success" href="/register" role="button">Sign up today</a></p>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="second-slide"
                        src="/images/E-Com-2.jpg"
                        alt="Second slide">
                    <div class="container">
                        <div class="carousel-caption">
                            <h1>Support Individual Sellers</h1>
                            <p>Thereâ€™s no E-Bazar warehouse <br> just millions of people selling the things they love.</p>
                            <p><a class="btn btn-lg btn-success" href="/products" role="button">See All Products</a></p>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="third-slide"
                        src="/images/E-Com-3.jpg"
                        alt="Third slide">
                    <div class="container">
                        <div class="carousel-caption text-right">
                            <h1>Already A Member</h1>
                            <p>log in and start reaching out <br> milions of people with your product</p>
                            <p><a class="btn btn-lg btn-success" href="/login" role="button">Log In</a></p>
                        </div>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <!-- All product button -->
        <div class="container marketing d-flex display-row justify-content-center">
            <div class="row justify-content-center">
                <div class="col-lg-2">
                    <a href="/products" class="catLink">
                        <img src="/images/all.png" width="140" height="140">
                        <p>All Products
                    </a></p>
                </div>
            </div>
        </div>

        <!-- Marketing messaging and featurettes
          ================================================== -->
        <!-- Wrap the rest of the page in another container to center all the content. -->

        <div class="container marketing d-flex display-row justify-content-center">

            <!-- Three columns of text below the carousel -->
            <div class="row justify-content-center">
                <% for(let i=1; i<categories.length-1; i++){ %>

                    <div class=" col-sm-6 col-md-4 col-lg-2">
                        <a class="catLink" href="/products?category=<%=categories[i]%>" role="button">
                            <img class="rounded-circle" src="/images/img-<%= i %>.jpg" width="140" height="140">
                            <p>
                                <%= categories[i] %>
                        </a></p>
                    </div><!-- /.col-lg-4 -->

                    <% } %>
            </div><!-- /.row -->

        </div><!-- /.container -->


        <!-- FOOTER -->
        <footer class="container">
            <p>&copy; 2021 E-Bazar, Inc.</p>
        </footer>
    </main>
</body>

